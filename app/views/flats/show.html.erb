<div class="banner"></div>

<div class="flat-tite">
  <h1><%= @flat.name %></h1>
  <p><%= @flat.address %></p>
</div>
<p class="descrip"><%= @flat.description %></p>
<div class="d-flex flex-column booking">
  <form class="book-now">
    <div class="form-group">
      <h3>Book this place</h3>
      <span>From</span>
      <input type="date" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group">
    <span>To</span>
      <input type="date" class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    <div class="form-check">
    </div>
    <button type="submit" class="btn btn-success btn-block">Book!</button>
  </form>
  <div class="details">
    <p>Details</p>
    <span><i class="fas fa-user-friends"></i> <%= @flat.number_of_guest %></span>
    <span><i class="fas fa-pound-sign"></i><%= @flat.price_per_night %></span>
  </div>
  <div class="socials d-flex justify-content-between">
  <span>Socials</span>
  <div class="icons">
    <span><i class="fab fa-facebook-square size: 2x"></i></span>
    <span><i class="fab fa-whatsapp size: 2x"></i></span>
    <span><i class="far fa-envelope size: 2x"></i></span>
  </div>
  </div>
</div>
